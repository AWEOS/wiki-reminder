# Database
MYSQL_ROOT_PASSWORD=your_secure_password_here
DATABASE_URL=mysql://root:your_secure_password_here@localhost:3306/wiki_reminder

# Outline Wiki API
OUTLINE_API_URL=https://your-outline-instance.com/api
OUTLINE_API_TOKEN=your_outline_api_token

# MailerSend Configuration
MAILERSEND_API_TOKEN=your_mailersend_api_token
MAIL_FROM_EMAIL=noreply@yourdomain.com
MAIL_FROM_NAME=Wiki Reminder

# Google Chat Incoming Webhook (aus dem Raum erstellen, NICHT Google Cloud API Key)
# Raum → Verwalten → Webhooks → Webhook hinzufügen → komplette URL kopieren
GOOGLE_CHAT_WEBHOOK_URL=https://chat.googleapis.com/v1/spaces/XXXX/messages?key=XXXX&token=XXXX

# Manager Email (receives escalation notifications)
MANAGER_EMAIL=manager@example.com

# Application URL (for generating links in emails)
APP_URL=http://localhost:3000

# Cron Schedule (default: every Monday at 9:00 AM)
CRON_SCHEDULE=0 9 * * 1

# Auth (NextAuth) – nur Google SSO, nur @aweos.de
AUTH_SECRET=generiere-mit-openssl-rand-base64-32
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=

# Google Workspace Integration (optional - for automatic user import)
# Service Account JSON Key (base64 encoded): cat service-account.json | base64
GOOGLE_SERVICE_ACCOUNT_KEY=
# Admin email to impersonate (needs Admin SDK access)
GOOGLE_ADMIN_EMAIL=admin@yourdomain.com
